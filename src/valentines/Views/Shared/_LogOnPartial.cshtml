@if (Request.IsAuthenticated)
{
<li class="dropdown @if(ViewBag.curPage == "Account"){<text>active</text>}">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-large"></i> @User.Identity.Name <b class="caret"></b></a>
    <ul class="dropdown-menu">
        <li><a href="@Url.Action("LogOff","Account")"><i class="icon-signout icon-large"></i> Logout</a></li>
    </ul>
</li>
}
else
{
<li>
    <a href="@Url.Action("Login", "Account", new { ReturnUrl = ViewContext.HttpContext.Request.Url.PathAndQuery })"><i class="icon-user icon-large"></i> Login</a>
</li>
}
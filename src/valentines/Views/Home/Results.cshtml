@using System.Globalization
@model valentines.ViewModels.ResultsViewModel
@{
	ViewBag.Title = "Results";
}
@section BetweenHeaderAndContent {
	<div class="hero-unit hero-section hero-index" id="heroheader">
	<div class="container">
		<div class="row">
			<div class="span12">
				<h1 class="ac" style="color:#CA278C;">Your Matches</h1>
			</div>
		</div>
	</div>
</div>
}

	<ul id="tab" class="nav nav-tabs">
	  <li class="active">
		<a href="#tab1" data-toggle="tab">Male</a>
	  </li>
	  <li><a href="#tab2" data-toggle="tab">Female</a></li>
	</ul>

	<div class="tab-content">
		<div class="tab-pane fade in active" id="tab1">

			<!-- Start male all school -->

			<div class="page-header">
				<h1>All School</h1>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Grade</th>
						<th>How You Rank For Them</th>
						<th>Compatibility Index</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.AllSchoolMales.Count(); i++ )
					{ 
						var m = Model.AllSchoolMales[i];
						<tr>
							<td>@(i+1)</td>
							<td>@m.FullName</td> <!-- m.aspnet_User.UserName -->
							<td>@m.Grade</td>
							<td>@m.PositionOnTheirListAllSchool</td>
							<td>@(m.CompatibilityIndex.ToString("00.0%", CultureInfo.InvariantCulture))</td> <!-- original format string: "0.000" -->
						</tr>
					}
				</tbody>
			</table>

			<!-- Start male grade-only -->

			<div class="page-header">
				<h1>Your Grade</h1>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>How You Rank For Them</th>
						<th>Compatibility Index</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.YourGradeMales.Count(); i++ )
					{ 
						var m = Model.YourGradeMales[i];
						<tr>
							<td>@(i+1)</td>
							<td>@m.FullName</td>
							<td>@m.PositionOnTheirListYourGrade</td>
							<td>@(m.CompatibilityIndex.ToString("00.0%", CultureInfo.InvariantCulture))</td>
						</tr>
					}
				</tbody>
			</table>
	
		</div>
		<div class="tab-pane fade" id="tab2">
		<!-- Start female all school -->

			<div class="page-header">
				<h1>All School</h1>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Grade</th>
						<th>How You Rank For Them</th>
						<th>Compatibility Index</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.AllSchoolFemales.Count(); i++ )
					{
						var m = Model.AllSchoolFemales[i];
						<tr>
							<td>@(i+1)</td>
							<td>@m.FullName</td>
							<td>@m.Grade</td>
							<td>@m.PositionOnTheirListAllSchool</td>
							<td>@(m.CompatibilityIndex.ToString("00.0%", CultureInfo.InvariantCulture))</td>
						</tr>
					}
				</tbody>
			</table>

			<!-- Start female grade-only -->

			<div class="page-header">
				<h1>Your Grade</h1>
			</div>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>How You Rank For Them</th>
						<th>Compatibility Index</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.YourGradeFemales.Count(); i++ )
